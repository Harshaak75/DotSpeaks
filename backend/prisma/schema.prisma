// Target Model

model YearlyTarget {
  id                 String                @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  year               Int
  totalRevenueTarget BigInt
  ceoId              String                @db.Uuid
  ceo                users                 @relation(fields: [ceoId], references: [id])
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  quarters           QuarterlyProjection[]
}

model QuarterlyProjection {
  // Primary Key
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  // Context & Calculation Results
  quarterName String // e.g., "Q1", "Q2", "Q3", "Q4"

  // The calculated values based on the 60% expenses / 40% savings rule
  projectedRevenue  BigInt // totalRevenueTarget / 4
  projectedExpenses BigInt // projectedRevenue * 0.6
  projectedSavings  BigInt // projectedRevenue * 0.4

  // Foreign Key to link back to the main YearlyTarget
  yearlyTargetId String       @db.Uuid
  yearlyTarget   YearlyTarget @relation(fields: [yearlyTargetId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())

  // Enforce uniqueness for a quarter within a yearly target
  @@unique([yearlyTargetId, quarterName])
}

