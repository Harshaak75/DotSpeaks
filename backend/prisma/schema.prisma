model TargetPackage {
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cmoTargetId String @db.Uuid
  name        String
  target      Int
  achieved    Int    @default(0)

  // Relationship back to the parent
  cmoTarget CmoTarget @relation(fields: [cmoTargetId], references: [id])
}

model ExternalIdentity {
  id       String @id @default(cuid())
  provider String // e.g. "keycloak"
  subject  String // The Keycloak 'sub' claim (unique per user)
  email    String @unique

  userId String? @db.Uuid // ✅ THIS FIX IS REQUIRED
  user   users?  @relation(fields: [userId], references: [id], onDelete: Cascade)

  clientId String?  @db.Uuid
  client   clients? @relation(fields: [clientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// supscription and billing history

model ClientSubscription {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  clientId String  @db.Uuid
  client   clients @relation(fields: [clientId], references: [id])

  packageId String?  @db.Uuid
  package   Package? @relation(fields: [packageId], references: [id])

  status SubscriptionStatus @default(ACTIVE)

  startDate    DateTime     @default(now())
  endDate      DateTime?
  renewalDate  DateTime? // next billing date
  billingCycle BillingCycle @default(MONTHLY)

  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  billingHistories BillingHistory[]
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PAUSED
}

enum BillingCycle {
  MONTHLY
  QUARTERLY
  YEARLY
}

model BillingHistory {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  subscriptionId String             @db.Uuid
  subscription   ClientSubscription @relation(fields: [subscriptionId], references: [id])

  clientId String  @db.Uuid
  client   clients @relation(fields: [clientId], references: [id])

  amount   Decimal @db.Decimal(10, 2)
  currency String  @default("INR")

  invoiceNumber String        @unique
  status        InvoiceStatus @default(PAID)

  paidAt    DateTime?
  createdAt DateTime  @default(now())
}

enum InvoiceStatus {
  PAID
  UNPAID
  FAILED
  REFUNDED
}

// ads

model ClientAd {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  title       String
  description String?
  imageUrl    String // URL from Supabase/S3
  type        String? // e.g. "Festival", "Discount", "Seasonal", "Special"

  startDate DateTime  @default(now())
  endDate   DateTime?

  status AdStatus @default(ACTIVE)

  ctaText String? // e.g. "Claim Offer"
  ctaLink String? // Optional URL for actions (claim, more details)

  displayOrder Int @default(1) // to show ads in order

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AdStatus {
  ACTIVE
  INACTIVE
  SCHEDULED
  EXPIRED
}

// notification
model Notification {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  // Which client user should receive this notification
  clientId String  @db.Uuid
  client   clients @relation(fields: [clientId], references: [id])

  // Notification content
  title   String
  message String?
  type    NotificationType // report | offer | meeting | general
  icon    String? // optional icon name: "report", "gift", "calendar" etc.

  // Optional link to redirect user
  targetUrl String? // e.g. "/report/123", "/offers", "/meeting/456"

  // Status
  isRead Boolean @default(false)

  createdAt DateTime @default(now())
}

enum NotificationType {
  REPORT
  OFFER
  MEETING
  GENERAL
}
